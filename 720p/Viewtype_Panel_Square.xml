<includes>
  <include name="Viewtype_Panel_Square">

    <control type="group">

      <visible>Control.IsVisible(58)</visible>
      <animation type="TYPE" condition="Window.IsVisible(2001)" reversible="false">
        <effect type="slide" end="-1500,0" time="200"/>
      </animation>
      <animation type="TYPE" condition="!Window.IsVisible(2001)" reversible="false">
        <effect type="slide" start="-1500,0" time="200"/>
      </animation>		

      <animation type="WindowClose">
        <effect type="fade" time="300"/>
        <effect type="slide" end="+1500,0" time="300"/>
      </animation>
      <animation type="WindowOpen">
        <effect type="fade" time="300"/>
        <effect type="slide" start="+1500,0" time="300"/>
      </animation>

      <control type="image">
        <posx>-12</posx>
        <posy>174</posy>
        <width>72</width>
        <height>72</height>
        <texture background="true">other_textures/osd/playlistnf.png</texture>
        <aspectratio scalediffuse="false">stretch</aspectratio>
        <visible>Window.IsActive(1) | Container.Content(Addons) | Container.Content(Albums)</visible>
        <animation effect="slide" start="-100,0" end="0,0" time="300" condition="Control.HasFocus(58)">Conditional</animation>
      </control>

      <control type="label">
        <posx>75</posx>
        <posy>220</posy>
        <width>300</width>
        <align>left</align>
        <aligny>top</aligny>
        <label>sort by: [COLOR Accent][LOWERCASE]$INFO[Container.SortMethod][/LOWERCASE][/COLOR] </label>
        <font>Sort_Font_Small</font>
        <textcolor>White</textcolor>
        <visible>Window.IsActive(1) | Container.Content(Addons) | Container.Content(Albums)</visible>
      </control>

      <control type="group">
        <visible>Control.IsVisible(58)</visible>

        <control type="panel" id="58">
          <viewtype label="Album Panel">Album Panel</viewtype>
          <posx>396</posx>
          <posy>288</posy>
          <width>405</width>
          <height>320</height>
          <scrolltime>200</scrolltime>
          <orientation>vertical</orientation>
          <onright>-</onright>
          <onleft>9000</onleft>
          <pagecontrol>61</pagecontrol>
          <preloaditems>2</preloaditems>
          <visible>Window.IsActive(1) | Container.Content(Addons) | Container.Content(Albums)</visible>

          <itemlayout width="80" height="80">
            <control type="image">
              <posx></posx>
              <posy></posy>
              <width>75</width>
              <height>75</height>
              <texture background="true">tile.png</texture>
              <aspectratio scalediffuse="false">stretch</aspectratio>
            </control>

            <control type="image">
              <posx></posx>
              <posy></posy>
              <width>75</width>
              <height>75</height>
              <texture background="true">$INFO[ListItem.Icon]</texture>
              <colordiffuse>ImageDiffuse</colordiffuse>
              <aspectratio scalediffuse="false">stretch</aspectratio>
            </control>
          </itemlayout>
          <focusedlayout width="80" height="80">
            <control type="image">
              <posx></posx>
              <posy></posy>
              <width>75</width>
              <height>75</height>
              <texture background="true">$INFO[ListItem.Icon]</texture>
              <animation type="Focus" reversible="false">
                <effect type="fade" start="80" end="100" time="400" />
              </animation>
              <aspectratio scalediffuse="false">stretch</aspectratio>
            </control>

            <control type="image">
              <posx></posx>
              <posy></posy>
              <width>75</width>
              <height>75</height>
              <texture>music_button.png</texture>
              <animation type="Focus" reversible="false">
                <effect type="fade" start="80" end="100" time="400" />
              </animation>
              <aspectratio scalediffuse="false">stretch</aspectratio>
            </control>
          </focusedlayout>
        </control>

        <control type="image">
          <posx>76</posx>
          <posy>288</posy>
          <width>315</width>
          <height>315</height>
          <texture>white_box.png</texture>
          <fadetime>200</fadetime>
          <aspectratio scalediffuse="false">stretch</aspectratio>
          <visible>!StringCompare(ListItem.Album, )</visible>
        </control>					

        <control type="image">
          <posx>76</posx>
          <posy>288</posy>
          <width>315</width>
          <height>315</height>
          <texture>$INFO[ListItem.Icon]</texture>
          <fadetime>200</fadetime>
          <aspectratio scalediffuse="false">stretch</aspectratio>
          <visible>true</visible>
          <bordersize>4</bordersize>
        </control>

        <control type="image">
          <posx>722</posx>
          <posy>288</posy>
          <width>560</width>
          <height>310</height>
          <texture background="true" >$INFO[ListItem.Property(Fanart_Image)]</texture>
          <fadetime>200</fadetime>
          <aspectratio scalediffuse="false">stretch</aspectratio>
          <visible>!IsEmpty(ListItem.Property(Fanart_Image))</visible>
        </control>			

        <control type="image">
          <posx>796</posx>
          <posy>288</posy>
          <width>485</width>
          <height>315</height>
          <texture>music_fanart_diffuse.png</texture>
          <fadetime>200</fadetime>
          <aspectratio scalediffuse="false">stretch</aspectratio>
        </control>

        <control type="scrollbar" id="61">
          <posx>796</posx>
          <posy>288</posy>
          <width>10</width>
          <height>315</height>
          <texturesliderbackground></texturesliderbackground>
          <textureslidernib>bar.png</textureslidernib>
          <textureslidernibfocus>scroll_nib.png</textureslidernibfocus>
          <texturesliderbar></texturesliderbar>
          <texturesliderbarfocus></texturesliderbarfocus>
          <showonepage>true</showonepage>
          <orientation>vertical</orientation>		
        </control>

      </control>

      <control type="label">
        <label>music</label>
        <posx>70</posx>
        <posy>170</posy>
        <height>30</height>
        <width>250</width>
        <font>Home_header</font>
        <align>left</align>
        <visible>Container.Content(Albums)</visible>
      </control>

      <control type="fadelabel" id="144">
        <posx>840</posx>
        <posy>300</posy>
        <width>400</width>
        <height>50</height>
        <aligny>Left</aligny>
        <font>Artist_Font</font>
        <textcolor>White</textcolor>
        <visible>true</visible>
        <scroll>true</scroll>
        <scrollout>false</scrollout>
        <pauseatend>600</pauseatend>
        <scrollspeed>50</scrollspeed>
        <label>$INFO[ListItem.Artist]</label>
        <visible>!IsEmpty(ListItem.Genre) + Container.Content(albums)</visible>
      </control>

      <control type="fadelabel">
        <label>[COLOR Accent]$INFO[ListItem.Album][/COLOR] $INFO[ListItem.Year]</label>
        <posx>395</posx>
        <posy>171</posy>
        <height>30</height>
        <width>985</width>
        <font>Home_menu</font>
        <scroll>true</scroll>
        <scrollout>false</scrollout>
        <pauseatend>600</pauseatend>
        <scrollspeed>50</scrollspeed>
        <aligny>top</aligny>
        <visible>Container.Content(Albums)</visible>
      </control>

      <control type="label">
        <posx>395</posx>
        <posy>210</posy>
        <width>600</width>
        <height>50</height>
        <aligny>center</aligny>
        <font>Genre_Font</font>
        <textcolor>White</textcolor>
        <label>$LOCALIZE[515]: [B]$INFO[ListItem.Genre][/B]</label>
        <visible>Container.Content(Albums) + !IsEmpty(ListItem.Genre)</visible>
      </control>

      <control type="label">
        <posx>796</posx>
        <posy>320</posy>
        <width>485</width>
        <height>50</height>
        <align>center</align>
        <aligny>top</aligny>
        <font>Large_Letter_Music</font>
        <textcolor>White</textcolor>
        <label>$INFO[ListItem.SortLetter]</label>
        <animation effect="fade" time="500">VisibleChange</animation>
        <visible>Container.Scrolling + !container.content(songs)</visible>
      </control>		
    </control>

    <control type="image" id="2">
      <description>top left bar</description>
      <posx>0</posx>
      <posy>0</posy>
      <width>20</width>
      <height>138</height>
      <texture>bar.png</texture>
      <animation effect="fade" time="400">WindowOpen</animation>
      <animation effect="fade" time="400">WindowClose</animation>			
      <visible>!container.content(episodes) + !container.content(songs)</visible>
    </control>

  </include>
</includes>

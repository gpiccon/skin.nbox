        <description>Large Icon Image</description>
        <posx>-765</posx>
        <posy>110</posy>
        <width>650</width>
        <height>500</height>
        <texture fallback="DefaultAddonNone.png">$INFO[Container(6).ListItem.Icon]</texture>
        <aspectratio align="center" aligny="center">keep</aspectratio>
        <bordertexture border="5">white_box.png</bordertexture>
        <bordersize>5</bordersize>
        <visible>!IsEmpty(Container(6).ListItem(0).Icon) + [SubString(Container(6).ListItem(0).Label,.jpg) | SubString(Container(6).ListItem(0).Label,.png) | SubString(Container(6).ListItem(0).Label,banner) | SubString(Container(6).ListItem(0).Label,poster) | SubString(Container(6).ListItem(0).Label,fanart)]</visible>
        

<window id="146">
	<defaultcontrol always="true">9000</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	
	<coordinates>
		<origin x="440" y="180" />
	</coordinates>

	<controls>

		<control type="image">
	        <animation type="WindowOpen">
          <effect type="fade" time="400" start="0" end="100" />
        </animation>
        <animation type="WindowClose">
          <effect type="fade" time="400" start="100" end="0" />
        </animation>	
	
			<posx>-440</posx>
			<posy>-180</posy>
			<width>1280</width>
			<height>720</height>
			<texture border="2">other_textures/black-back.png</texture>
		</control>

		<control type="group">
		  <visible>!Window.IsVisible(AddonSettings) + !Window.IsActive(TextViewer)</visible>
			<animation type="WindowOpen">
        <effect type="slide" time="300" start="+400, 0" end="0,0" easing="out" tween="cubic" />
      </animation>
      <animation type="WindowClose">
        <effect type="slide" time="300" start="0,0" end="+400,0" easing="in" tween="cubic" />
      </animation>
      <animation type="Hidden">
        <effect type="slide" time="300" start="0,0" end="+400,0" easing="in" tween="cubic" />
      </animation>
      <animation type="Visible">
        <effect type="slide" time="300" start="+400, 0" end="0,0" easing="out" tween="cubic" delay="200" />
      </animation>


	<control type="image">
		<description>background image</description>
		<posx>440</posx>
		<posy>-180</posy>
		<width>400</width>
		<height>720</height>
		<texture border="22">button.png</texture>
	</control>



		<control type="fadelabel">
				<description>Menu Title</description>
				<posx>470</posx>
				<posy>-110</posy>
				<width>370</width>
				<label>$INFO[ListItem.Property(Addon.Name)]</label>
				<font>Home_sub_header</font>
				<align>left</align>
				<textcolor>black</textcolor>
			</control>

			<control type="group">
			  <posx>470</posx>
  			<posy>0</posy>
  			<width>340</width>

				<control type="grouplist" id="9000">
					<width>340</width>
					<height>230</height>
					<itemgap>2</itemgap>
					<onup>9000</onup>
					<ondown>9000</ondown>
					<onright>50</onright>
					<onleft>50</onleft>
					<orientation>vertical</orientation>

					<control type="button" id="6">
						<description>Enable Addon button</description>
						<width>340</width>
						<label>24022</label>
						<textcolor>black</textcolor>
					</control>

					<control type="button" id="7">
						<description>Disable Addon button</description>
						<width>340</width>
						<label>24021</label>
						<textcolor>black</textcolor>
					</control>

					<control type="button" id="9">
						<description>Addon Settings</description>
						<width>340</width>
						<label>24020</label>
						<textcolor>black</textcolor>
					</control>

					<control type="button" id="8">
						<description>Update Addon button</description>
						<width>340</width>
						<label>24069</label>
						<textcolor>black</textcolor>
					</control>

					<control type="button" id="10">
						<description>Changelog button</description>
						<width>340</width>
						<label>24036</label>
						<textcolor>black</textcolor>
					</control>

				</control>
				
				<control type="textbox">
				  <posy>420</posy>
					<description>Disclaimer</description>
					<width>340</width>
					<height>95</height>
					<label>$INFO[ListItem.Property(Addon.Disclaimer),[B]$LOCALIZE[24052]:[/B] ]</label>
					<scroll>true</scroll>
					<visible>!IsEmpty(ListItem.Property(Addon.Disclaimer))</visible>
					<textcolor>black</textcolor>
				</control>

				<control type="group">
					<visible>!IsEmpty(ListItem.Property(Addon.Broken))</visible>
          <posy>280</posy>

					<control type="textbox">
						<description>Reason label</description>
						<width>340</width>
						<height>95</height>
						<label>$INFO[ListItem.Property(Addon.Broken),[B]Broken:[/B] ]</label>
						<align>justify</align>
						<autoscroll time="2000" delay="3000" repeat="5000">true</autoscroll>
						<textcolor>black</textcolor>
					</control>

				</control>

			</control>

		</control>

		

	</controls>

</window>

<window type="dialog" id="400">
  <defaultcontrol always="true">403</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <visible>Player.HasMedia + Window.IsActive(PlayerControls) + !VideoPlayer.IsFullscreen + !Window.IsActive(Visualisation)</visible>

  <controls>

    <include>GlobalOverlay</include>

    <control type="group">
      <posx>880</posx>
      <posy>0</posy>

      <animation type="WindowOpen">
        <effect type="slide" time="300" start="+400, 0" end="0,0" easing="out" tween="cubic" />
      </animation>
      <animation type="WindowClose">
        <effect type="slide" time="300" start="0,0" end="+400,0" easing="in" tween="cubic" />
      </animation>
      <animation type="Hidden">
        <effect type="slide" time="300" start="0,0" end="+400,0" easing="in" tween="cubic" />
      </animation>
      <animation type="Visible">
        <effect type="slide" time="300" start="+400, 0" end="0,0" easing="out" tween="cubic" />
      </animation>

      <control type="group">
        <visible>Player.HasVideo</visible>
        
        <animation type="WindowOpen">
          <effect type="slide" time="300" start="+1165, 0" end="0,0" easing="out" tween="cubic" />
        </animation>
        <animation type="WindowClose">
          <effect type="slide" time="300" start="0,0" end="+1165,0" easing="in" tween="cubic" />
        </animation>

        <control type="image">
          <posx>-765</posx>
          <posy>172</posy>
          <width>660</width>
          <height>376</height>
          <texture>white_box.png</texture>
          <bordertexture border="5">white_box.png</bordertexture>
          <bordersize>5</bordersize>
        </control>

        <control type="videowindow">
          <description>video</description>
          <posx>-760</posx>
          <posy>177</posy>
          <width>650</width>
          <height>366</height>
        </control>

        <control type="button" id="2">
          <posx>-760</posx>
          <posy>177</posy>
          <width>650</width>
          <height>366</height>
          <onleft>-</onleft>
          <onright>1</onright>
          <onup>-</onup>
          <ondown>-</ondown>
          <onclick>fullscreen</onclick>
          <visible allowhiddenfocus="true">Control.HasFocus(2)</visible>
        </control>

        <control type="image">
          <posx>-485</posx>
          <posy>310</posy>
          <width>100</width>
          <height>100</height>
          <texture>fullscreen.png</texture>
          <animation effect="fade" start="0" end="100" time="300">VisibleChange</animation>
          <visible>Control.HasFocus(2)</visible>
        </control>

      </control>

      <control type="image">
        <posx>0</posx>
        <posy>0</posy>
        <width>400</width>
        <height>720</height>
        <texture border="22">button.png</texture>
      </control>

      <control type="label">
        <description>Heading</description>
        <posx>30</posx>
        <posy>70</posy>
        <width>400</width>
        <align>left</align>
        <font>Home_sub_header</font>
        <textcolor>black</textcolor>
        <label>$INFO[VideoPlayer.Title]</label>
        <scroll>true</scroll>
        <visible>Player.HasVideo</visible>
      </control>

      <control type="label">
        <description>Heading</description>
        <posx>30</posx>
        <posy>70</posy>
        <width>400</width>
        <align>left</align>
        <font>Home_sub_header</font>
        <textcolor>black</textcolor>
        <label>$INFO[MusicPlayer.Title]$INFO[MusicPlayer.Artist, - ,]</label>
        <scroll>true</scroll>
        <visible>Player.HasAudio</visible>
      </control>
      
      <control type="label">
				<posx>30</posx>
				<posy>100</posy>
				<width>400</width>
				<textcolor>black</textcolor>
				<label>$INFO[VideoPlayer.Tagline]</label>
				<visible>!IsEmpty(VideoPlayer.Tagline)</visible>
			</control>
			
			<control type="label">
				<posx>30</posx>
				<posy>100</posy>
				<width>400</width>
				<textcolor>black</textcolor>
				<label>$INFO[VideoPlayer.TVShowTitle]</label>
				<visible>!IsEmpty(VideoPlayer.TVShowTitle)</visible>
			</control>
      
      <control type="group">
        <visible>!IntegerGreaterThan(System.Time(ss),30)</visible>
        <animation type="Hidden">
  				<effect type="fade" time="300" />
  			</animation>
  			<animation type="Visible">
  				<effect type="fade" time="300" />
  			</animation>
      
      <control type="textbox">
				<posx>30</posx>
				<posy>180</posy>
				<width>340</width>
				<height>280</height>
				<info>VideoPlayer.Plot</info>
				<align>justify</align>
				<autoscroll time="3000" delay="6000" repeat="8000"></autoscroll>
				<font>Plot_Font</font>
				<textcolor>Black</textcolor>
				<visible>IsEmpty(VideoPlayer.TVShowTitle)</visible>
			</control>
			
			<control type="label">
				<posx>30</posx>
				<posy>180</posy>
				<width>340</width>
				<textcolor>black</textcolor>
				<label>$INFO[VideoPlayer.Season,Season ], $INFO[VideoPlayer.Episode,Episode ]</label>
				<visible>!IsEmpty(VideoPlayer.TVShowTitle)</visible>
			</control>
			
			<control type="label">
				<posx>30</posx>
				<posy>490</posy>
				<width>340</width>
				<textcolor>black</textcolor>
				<label>$INFO[VideoPlayer.Director,[B]Director[/B]: ]</label>
				<visible>!IsEmpty(VideoPlayer.Director)</visible>
			</control>
			
			<control type="label">
				<posx>30</posx>
				<posy>520</posy>
				<width>340</width>
				<textcolor>black</textcolor>
				<label>$INFO[VideoPlayer.Writer,[B]Writer[/B]: ]</label>
				<visible>!IsEmpty(VideoPlayer.Writer)</visible>
			</control>
			
		</control>
		
		<control type="group">
      <visible>IntegerGreaterThan(System.Time(ss),30)</visible>
      <animation type="Hidden">
				<effect type="fade" time="300" />
			</animation>
			<animation type="Visible">
				<effect type="fade" time="300" />
			</animation>
			
			<control type="image">
        <posx>72</posx>
				<posy>172</posy>
				<width>255</width>
				<height>375</height>
        <texture border="2">$INFO[Player.Art(tvshow.poster)]</texture>
        <bordertexture border="5">other_textures/ButtonFO.png</bordertexture>
				<bordersize>5</bordersize>
				<aspectratio align="right" aligny="top">stretch</aspectratio>
				<visible>!IsEmpty(VideoPlayer.TVShowTitle)</visible>
      </control>
      
      <control type="image">
        <posx>72</posx>
				<posy>172</posy>
				<width>255</width>
				<height>375</height>
        <texture border="2">$INFO[Player.Art(poster)]</texture>
        <bordertexture border="5">other_textures/ButtonFO.png</bordertexture>
				<bordersize>5</bordersize>
				<aspectratio align="right" aligny="top">stretch</aspectratio>
				<visible>IsEmpty(VideoPlayer.TVShowTitle)</visible>
      </control>
      
    </control>

      <control type="grouplist" id="1">
        <posx>8</posx>
        <posy>600</posy>
        <width>450</width>
        <height>150</height>
        <itemgap>1</itemgap>
        <orientation>horizontal</orientation>
        <usecontrolcoords>true</usecontrolcoords>
        <onleft>2</onleft>
        <onright>1</onright>
        <onup>-</onup>
        <ondown>-</ondown>

        <control type="button" id="401">
          <description>Skip Back</description>
          <posy>5</posy>
          <posx>0</posx>
          <width>70</width>
          <height>70</height>
          <label>-</label>
          <texturefocus>other_textures/OSD/PrevTrackFO.png</texturefocus>
          <texturenofocus>other_textures/OSD/PrevTrackNF.png</texturenofocus>
          <onclick>playercontrol(previous)</onclick>
        </control>

        <control type="button" id="402">
          <description>Rewind</description>
          <posy>15</posy>
          <posx>5</posx>
          <width>50</width>
          <height>50</height>
          <label>-</label>
          <texturefocus>other_textures/OSD/RewindFO.png</texturefocus>
          <texturenofocus>other_textures/OSD/RewindNF.png</texturenofocus>
          <onclick>playercontrol(rewind)</onclick>
        </control>

        <control type="togglebutton" id="403">
          <description>Play/Pause</description>
          <width>80</width>
          <height>80</height>
          <label>-</label>
          <texturefocus>other_textures/OSD/PauseFO.png</texturefocus>
          <texturenofocus>other_textures/OSD/PauseNF.png</texturenofocus>
          <usealttexture>Player.Paused | Player.Forwarding | Player.Rewinding</usealttexture>
          <alttexturefocus>other_textures/OSD/PlayFO.png</alttexturefocus>
          <alttexturenofocus>other_textures/OSD/PlayNF.png</alttexturenofocus>
          <onclick>playercontrol(play)</onclick>
        </control>

        <control type="button" id="404">
          <description>Stop</description>
          <posy>15</posy>
          <width>50</width>
          <height>50</height>
          <label>-</label>
          <texturefocus>other_textures/OSD/StopFO.png</texturefocus>
          <texturenofocus>other_textures/OSD/StopNF.png</texturenofocus>
          <onclick>playercontrol(stop)</onclick>
        </control>

        <control type="button" id="405">
          <description>Forward</description>
          <posy>15</posy>
          <width>50</width>
          <height>50</height>
          <label>-</label>
          <texturefocus>other_textures/OSD/ForwardFO.png</texturefocus>
          <texturenofocus>other_textures/OSD/ForwardNF.png</texturenofocus>
          <onclick>playercontrol(forward)</onclick>
        </control>

        <control type="button" id="406">
          <description>Skip Forward</description>
          <posy>5</posy>
          <posx>5</posx>
          <width>70</width>
          <height>70</height>
          <label>-</label>
          <texturefocus>other_textures/OSD/NextTrackFO.png</texturefocus>
          <texturenofocus>other_textures/OSD/NextTrackNF.png</texturenofocus>
          <onclick>playercontrol(next)</onclick>
        </control>

      </control>

      <control type="group">
        <posx>10</posx>
        <posy>110</posy>

        <control type="group">
          <visible>Player.HasAudio</visible>

          <control type="image">
            <posx>-5</posx>
            <posy>-5</posy>
            <width>424</width>
            <height>242</height>
            <texture border="2">$INFO[MusicPlayer.Property(Fanart_Image)]</texture>
          </control>

          <control type="button" id="2">
            <posx>54</posx>
            <width>305</width>
            <height>231</height>
            <texture border="2">other_textures/black-back.png</texture>
            <bordertexture border="5">other_textures/ButtonFO.png</bordertexture>
            <bordersize>6</bordersize>
            <onleft>-</onleft>
            <onright>-</onright>
            <onup>1</onup>
            <ondown>-</ondown>
            <onclick>fullscreen</onclick>
            <visible allowhiddenfocus="true">Control.HasFocus(2)</visible>
          </control>

        </control>
      </control>
    </control>
  </controls>
</window>